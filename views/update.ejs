            <input type="text" id="phone" name="phone" placeholder="Phone Number" value ="<%= (user.phone) %>" class="form-control">
            </div>
            <div>
            <textarea rows="" id="address" cols="" placeholder="Address" name="address" value="<%= (user.address) %>" class="form-control"></textarea>
            </div>
